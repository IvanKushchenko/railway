header.c-header
	.container.d-flex.align-items-center.justify-content-between.justify-content-lg-start
		.d-flex.align-items-center
			h1.c-logo.m-0.mr-lg-5
				a(href="#").c-logo__link
					img(src="./img/content/logo.png", alt="")
