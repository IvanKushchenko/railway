				button.c-btn.c-btn_float.c-btn_lg.mr-4.c-header__action.c-header__action_call
					svg(width="21" height="21")
						use(href="#phone")
				.d-flex.flex-column
					a(href="#").c-phone.c-phone_lg.mb-3 +7 (812) 966-55-22
					a(href="#").c-phone.c-phone_lg +7 (812) 966-55-22
